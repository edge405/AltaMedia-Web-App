# ========================================
# MySQL Database Configuration
# ========================================

# MySQL Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=altamedia_db
DB_USER=altamedia_user
DB_PASSWORD=your_secure_password_here

# MySQL Connection Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ========================================
# JWT Configuration
# ========================================

# JWT Secret Key (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# JWT Token Expiration (in seconds)
JWT_EXPIRES_IN=86400

# JWT Refresh Token Expiration (in seconds)
JWT_REFRESH_EXPIRES_IN=604800

# ========================================
# Server Configuration
# ========================================

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# ========================================
# Email Configuration (for welcome emails, etc.)
# ========================================

# Email Service (nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password

# Email From Address
EMAIL_FROM=AltaMedia <noreply@altamedia.com>

# ========================================
# Cloudinary Configuration (for file uploads)
# ========================================

# Cloudinary Cloud Name
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Cloudinary API Key
CLOUDINARY_API_KEY=your_cloudinary_api_key

# Cloudinary API Secret
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Cloudinary Upload Preset (optional)
CLOUDINARY_UPLOAD_PRESET=altamedia_uploads

# ========================================
# OpenAI Configuration (for AI suggestions)
# ========================================

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (default: gpt-4)
OPENAI_MODEL=gpt-4

# OpenAI Max Tokens (default: 300)
OPENAI_MAX_TOKENS=300

# OpenAI Temperature (default: 0.7)
OPENAI_TEMPERATURE=0.7

# ========================================
# Rate Limiting Configuration
# ========================================

# Rate Limit Window (in milliseconds)
RATE_LIMIT_WINDOW_MS=900000

# Rate Limit Max Requests per Window
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# File Upload Configuration
# ========================================

# Maximum File Size (in bytes) - 10MB default
MAX_FILE_SIZE=10485760

# Allowed File Types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Upload Directory (for local storage)
UPLOAD_DIR=uploads

# ========================================
# Logging Configuration
# ========================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log File Path (optional)
LOG_FILE_PATH=logs/app.log

# ========================================
# Security Configuration
# ========================================

# Bcrypt Salt Rounds
BCRYPT_SALT_ROUNDS=12

# Session Secret (if using sessions)
SESSION_SECRET=your_session_secret_here

# ========================================
# Application Configuration
# ========================================

# Application Name
APP_NAME=AltaMedia Web App

# Application Version
APP_VERSION=1.0.0

# Application URL
APP_URL=http://localhost:3000

# API Base URL
API_BASE_URL=http://localhost:5000/api

# ========================================
# Development/Production Specific
# ========================================

# Development Mode
DEV_MODE=true

# Debug Mode
DEBUG=false

# Enable Database Logging
DB_LOGGING=false

# Enable Query Logging
QUERY_LOGGING=false

# ========================================
# Optional: External Services
# ========================================

# Stripe Configuration (if using payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Google Analytics (optional)
GA_TRACKING_ID=G-XXXXXXXXXX

# ========================================
# Backup Configuration
# ========================================

# Database Backup Schedule (cron format)
DB_BACKUP_SCHEDULE=0 2 * * *

# Backup Retention Days
BACKUP_RETENTION_DAYS=30

# Backup Directory
BACKUP_DIR=backups

# ========================================
# Notes and Instructions
# ========================================

# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual configuration
# 3. Never commit .env file to version control
# 4. Keep your secrets secure and rotate them regularly
# 5. Use different values for development, staging, and production

# Example commands:
# cp env.mysql.example .env
# nano .env  # Edit with your actual values
# source .env  # Load environment variables

# ========================================
# MySQL Setup Commands (for reference)
# ========================================

# Create MySQL database and user:
# mysql -u root -p
# CREATE DATABASE altamedia_db CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
# CREATE USER 'altamedia_user'@'localhost' IDENTIFIED BY 'your_secure_password_here';
# GRANT ALL PRIVILEGES ON altamedia_db.* TO 'altamedia_user'@'localhost';
# FLUSH PRIVILEGES;
# EXIT;

# Import schema:
# mysql -u altamedia_user -p altamedia_db < database/mysql_schema.sql
