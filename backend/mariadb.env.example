# MariaDB Configuration
# Copy this file to .env and update with your MariaDB settings

# Database Connection
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_USER=root
MARIADB_PASSWORD=your_password_here
MARIADB_DATABASE=alta_media

# SSL Configuration (optional)
MARIADB_SSL=false

# Connection Pool Settings
MARIADB_CONNECTION_LIMIT=10
MARIADB_ACQUIRE_TIMEOUT=60000
MARIADB_TIMEOUT=60000

# Timezone
MARIADB_TIMEZONE=+00:00 